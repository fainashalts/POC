<h1><%= @user.first_name %><%= @user.last_name %>


<!-- This displays each of the links that a specific user has posted -->
	<% @user.links.each do |link| %>

		<ul>
			<li><%= link.title %></li>
			<li><%= link.url %></li>
		</ul>


	<% end %>

<% if current_user %>
	<%= link_to "Edit Your Profile", edit_user_registration_path %>
	<%= link_to "Delete Your Profile", user_registration_path, method: :delete %>
<% end %>
