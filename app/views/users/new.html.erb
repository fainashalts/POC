<h1>Create a Profile</h1>


<%= form_for @user do |f| %>
	
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	
	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.text_field :password %>
	</div>


	<div>
		<%= f.label :password_confirm %>
		<%= f.text_field :password_confirm %>
	</div>

	<div>
		<%= f.submit "Create your profile!" %>
	</div>

<% end %>