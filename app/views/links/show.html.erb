 <div>
	<h1><a href="<%= @link.url %>"><%= fetch(@link.url.to_s).title %></a></h1>
	<h3><%= fetch(@link.url.to_s).description%></h3>
	<img class="link-img" src= "<%= fetch(@link.url.to_s).images.first.src %>">
	<%= link_to "Delete this link", links_path, method: :delete, data: {confirm: "Are you sure you want to delete this link?"}%>
</div>	

<h2>Comments</h2>

<% @link.comments.each do |comment| %>
	
	<h4><%= comment.user.name %></h4>
	<p><%= comment.body %></p>
	
<% end %>

<h2>Add A Comment</h2>

<%= form_for [@link, Comment.new] do |f| %>
	
	<div>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>

	<div>
		<%= f.submit "Add Comment" %>
	</div>

<% end %>