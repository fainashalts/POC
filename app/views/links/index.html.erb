<h1>All Links</h1>


<!-- This will display all of the links in our database, regardless of their user  -->
<% @links.each do  |link| %>

	<ul>
		<li><%= link.title %></li>
		<li><%= link.url %></li>
    <li><%= link_to "upvote", like_link_path(link), method: :put %>
	</ul>

<% end %>

<% if current_user %>

	<%= link_to "Add A Link!", new_link_path %>

<% end %>